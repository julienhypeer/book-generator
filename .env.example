# Backend Configuration
DATABASE_URL=sqlite:///./storage/database.db
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Security
SECRET_KEY=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# WeasyPrint Configuration
WEASYPRINT_BASEURL=file:///app/templates/
WEASYPRINT_DPI=300
WEASYPRINT_PDF_VARIANT=pdf/a-3b

# Storage
STORAGE_PATH=/storage
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=md,txt,html,jpg,png,svg

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Frontend Configuration (for .env.local)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_PUBLIC_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@bookgenerator.com

# Development
DEBUG=false
RELOAD=true